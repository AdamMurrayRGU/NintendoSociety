// Accordian container, accordian button, accordian data
let accordianContainers = document.getElementsByClassName("accordianClass");

if (accordianContainers !== null) {
    accordianContainers.forEach(function(container) {
        container.getElementsByClassName("accordianButton")[0].addEventListener("click", handleAccordian(this));
    });
}

let accordianDisplayStatus=false;
function handleAccordian(element) {
    if (accordianDisplayStatus) {
        closeAccordian(element);
        accordianDisplayStatus=false;
    } else {
        openAccordian(element);
        accordianDisplayStatus=true;
    }
}

// Open/Close the accordian corrosponding to the button clicked.
function closeAccordian(element) {

}

function openAccordian(element) {

}
